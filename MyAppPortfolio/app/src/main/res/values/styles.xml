<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">36dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonProject">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#BBDEFB</item>
    </style>

    <style name="CapstoneProject">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#2196F3</item>
    </style>

</resources>
